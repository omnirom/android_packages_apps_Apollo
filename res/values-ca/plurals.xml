<resources xmlns:xliff="urn:oasis:names:tc:xliff:document:1.2">

    <!-- Used to indicate the number of artists -->
    <plurals name="Nartists">

        <!-- Only one artist -->
        <item quantity="one">1 artista</item>
        <!-- More than one artist -->
        <item quantity="other"><xliff:g id="count">%d</xliff:g> artistes</item>
    </plurals>

    <!-- Used to indicate the number of albums for an artist -->
    <plurals name="Nalbums">

        <!-- Only one album -->
        <item quantity="one">1 àlbum</item>
        <!-- More than one album -->
        <item quantity="other"><xliff:g id="count">%d</xliff:g> àlbums</item>
    </plurals>

    <!-- Used to indicate the number of songs for an album -->
    <plurals name="Nsongs">

        <!-- Only one song -->
        <item quantity="one">1 cançó</item>
        <item quantity="other"><xliff:g id="count">%d</xliff:g> cançons</item>
    </plurals>

    <!-- Used to indicate the number of genres -->
    <plurals name="Ngenres">

        <!-- Only one genre -->
        <item quantity="one">1 gènere</item>
        <!-- More than one genre -->
        <item quantity="other"><xliff:g id="count">%d</xliff:g> gèneres</item>
    </plurals>

    <!-- Toasts after adding song(s) to playlists -->
    <plurals name="NNNtrackstoplaylist">

        <!-- message shown when one song was added -->
        <item quantity="one">S\'ha afegit 1 cançó a la llista de reproducció.</item>
        <!-- message shown when zero or more than one song was added -->
        <item quantity="other">S\'ha afegit <xliff:g id="number" example="27">%d</xliff:g> cançons a la llista de reproducció.</item>
    </plurals>

    <!-- Toasts after adding song(s) to queue -->
    <plurals name="NNNtrackstoqueue">

        <!-- message shown when one song was added -->
        <item quantity="one">S\'ha afegit 1 cançó a la cua.</item>
        <!-- message shown when zero or more than one song was added -->
        <item quantity="other">S\'ha afegit <xliff:g id="number" example="27">%d</xliff:g> cançons a la cua.</item>
    </plurals>

    <!-- Toasts after adding song(s) to the favorites list -->
    <plurals name="NNNtrackstofavorites">

        <!-- message shown when one song was added -->
        <item quantity="one">S\'ha afegit 1 cançó a Preferides.</item>
        <!-- message shown when zero or more than one song was added -->
        <item quantity="other">S\'ha afegit <xliff:g id="number" example="27">%d</xliff:g> cançons a Preferides.</item>
    </plurals>

    <!-- Toast confirming that song(s) was/were deleted. -->
    <plurals name="NNNtracksdeleted">

        <!-- delete confirmation message for 1 song -->
        <item quantity="one">S\'ha suprimit 1 cançó.</item>
        <!-- delete confirmation message for 0 or more than 1 songs -->
        <item quantity="other">S\'ha suprimit <xliff:g id="songs_to_delete">%d</xliff:g> cançons.</item>
    </plurals>

</resources>
